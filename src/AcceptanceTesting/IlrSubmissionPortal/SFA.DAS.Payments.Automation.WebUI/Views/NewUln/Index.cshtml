@model  SFA.DAS.Payments.Automation.WebUI.ViewModels.NewUlnViewModel

@{
    ViewBag.Title = "Index";

}

<h2>Get new ULNs</h2>


@using (Html.BeginForm("Index", "NewUln", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <fieldset>
        <div class="form-group">
            <label class="col-sm-2 control-label">Count</label>
            <div class="col-sm-10" style="padding-bottom:5px;">
                <input type="number" id="count" name="count"  />
            </div>
        </div>
      
        <div class="form-group">
            <label class="col-sm-2 control-label">&nbsp;</label>
            <div class="col-sm-10"><button type="submit">Get ULNs</button></div>
        </div>

        @if (Model != null && Model.Ulns != null)
        {
        <div class="table-responsive">
            <table class="table table-striped ">
                <tr>
                    <th>ULN</th>
                </tr>
                @foreach (var item in Model.Ulns)
                    {
                        <tr>
                            <td>@item</td>
                        </tr>
                    }
            </table>
            <div>*These ULNs will be marked as used</div>
        </div>
        }
    </fieldset>
}

