@model SFA.DAS.Payments.Automation.WebUI.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<form method="post">
    
    <div class="form-group">
        <label class="col-sm-2 control-label">Email Address</label>
        <div class="col-sm-10" style="padding-bottom:5px;"><input type="text" name="emailAddress" value="@Model.EmailAddress" /></div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10" style="padding-bottom:5px;"><input type="password" name="password" /></div>
    </div>

    <div class="form-group">
        <div class="col-sm-10"><button type="submit">Login</button></div>
    </div>
    
    @if (Model.IsFailedLogin)
    {
        <div class="form-group">
            <div class="col-sm-10">
                <div class="alert alert-danger">
                    Invalid username / password
                </div>
            </div>
        </div>
    }

</form>